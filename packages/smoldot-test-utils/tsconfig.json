{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "rootDir": "./src",
    "esModuleInterop": true,
    "outDir": "./dist",
    "target": "ES2018",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "module": "ES2020"
  },
  "include": ["src", "."]
}
